<% layout("layouts/boilerplate") %>

<div class="container d-flex justify-content-center align-items-center mt-1 mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card shadow">
        <img
          src="https://external-preview.redd.it/HTgwIlYBAAGRG4d5TanWJ_NLzb5eG6FVjmEt1cMjLeY.jpg?auto=webp&s=62c28e4c30ba55be8599bfbc3fab1488ae224a71"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Log In</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" autofocus required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-outline-danger fw-bold">Log In</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
